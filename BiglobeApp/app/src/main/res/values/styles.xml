<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Top_Header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/accent_material_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="Top_Cell_Text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/top_item_bg</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:onClick">onTextViewClick</item>
    </style>

    <style name="Top_Line1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/background_floating_material_light</item>
    </style>

    <style name="Top_Line2" parent="Top_Line1">
        <item name="android:layout_marginLeft">60dp</item>
    </style>

    <style name="Top_Line3">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/line</item>
    </style>

    <style name="Setting_item">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:layout_height">?android:attr/listPreferredItemHeight</item>-->
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Setting_Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Setting_SectionTitle">
        <item name="android:textColor">@color/accent_material_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Setting_SectionTitleBattleStart">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Setting_SectionDescrition">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="Setting_Header_BattleStart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
